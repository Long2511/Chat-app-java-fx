<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="640.0" stylesheets="@../css/LoginView.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ouroboros.chatapp.chatapp.Login">
    <children>
        <VBox fx:id="loginForm" alignment="CENTER" layoutX="150.0" layoutY="183.0" prefHeight="274.0" prefWidth="340.0" spacing="15.0">
            <Label fx:id="welcomeLabel" text="Welcome back" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Login" />
            <HBox fx:id="registerPromptBox" alignment="CENTER" spacing="5.0">
                <Label fx:id="registerPromptLabel" text="Don't have an account?" />
                <Button fx:id="registerButton" onAction="#onRegisterButtonClick" text="Register here" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
